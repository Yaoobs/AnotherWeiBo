<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    android:id="@+id/rgTab"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:gravity="center"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/rbRecommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rb_left_selector"
        android:button="@null"
        android:checked="true"
        android:paddingBottom="@dimen/space_s"
        android:paddingLeft="@dimen/space_m"
        android:paddingRight="@dimen/space_m"
        android:paddingTop="@dimen/space_s"
        android:text="@string/recommend"
        android:textSize="@dimen/txt_m"
        />

    <RadioButton
        android:id="@+id/rbNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rb_right_selector"
        android:button="@null"
        android:paddingBottom="@dimen/space_s"
        android:paddingLeft="@dimen/space_m"
        android:paddingRight="@dimen/space_m"
        android:paddingTop="@dimen/space_s"
        android:text="@string/newest"
        android:textSize="@dimen/txt_m"
        />
</RadioGroup>