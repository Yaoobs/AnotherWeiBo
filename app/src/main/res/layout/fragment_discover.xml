<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_lineframe_bottom_selector"
        android:padding="@dimen/space_s">

        <ImageView
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:src="@mipmap/ic_messages_at"/>

        <TextView
            android:drawableRight="@mipmap/ic_arrow_right"
            style="@style/tv_m_black_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/space_m"
            android:text="@string/at_me"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/llComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_lineframe_bottom_selector"
        android:padding="@dimen/space_s">

        <ImageView
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:src="@mipmap/ic_messages_comments"/>

        <TextView
            android:drawableRight="@mipmap/ic_arrow_right"
            style="@style/tv_m_black_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/space_m"
            android:text="@string/lbl_comment"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_lineframe_bottom_selector"
        android:padding="@dimen/space_s">

        <ImageView
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:src="@mipmap/ic_messages_good"/>

        <TextView
            android:drawableRight="@mipmap/ic_arrow_right"
            style="@style/tv_m_black_sl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/space_m"
            android:text="@string/lbl_like"/>
    </LinearLayout>
</LinearLayout>