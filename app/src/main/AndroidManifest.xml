                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.simple"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FansActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.simple"/>
            </intent-filter>
        </activity>
    </application>

</manifest>